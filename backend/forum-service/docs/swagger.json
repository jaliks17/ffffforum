          "type": "object",
          "properties": {
              "author_id": {
                  "type": "integer",
                  "example": 1
              },
              "author_name": {
                  "description": "Исправлено db:\"-\"",
                  "type": "string"
              },
              "content": {
                  "type": "string",
                  "example": "текст комментария"
              },
              "createdAt": {
                  "type": "string"
              },
              "id": {
                  "type": "integer",
                  "example": 1
              },
              "post_id": {
                  "type": "integer",
                  "example": 1
              }
          }
      },
      "entity.ErrorResponse": {
          "type": "object",
          "properties": {
              "error": {
                  "type": "string",
                  "example": "error message"
              }
          }
      },
      "entity.Post": {
          "type": "object",
          "properties": {
              "author_id": {
                  "type": "integer",
                  "example": 456
              },
              "content": {
                  "type": "string",
