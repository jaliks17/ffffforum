              },
              "created_at": {
                  "type": "string",
                  "example": "2023-01-01T00:00:00Z"
              },
              "id": {
                  "type": "integer",
                  "example": 123
              },
              "title": {
                  "type": "string",
                  "example": "My Post Title"
              }
          }
      },
      "entity.SuccessResponse": {
          "type": "object",
          "properties": {
              "message": {
                  "type": "string",
                  "example": "success message"
              }
          }
      }
  }
